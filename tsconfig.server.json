{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "noEmit": true
  },
  "include": [
    "server/**/*.ts",
    "server.ts",
    "drizzle.config.ts",
    "drizzle/schema.ts"
  ],
  "exclude": [
    "node_modules",
    "server.bak.ts",
    "server/whatsapp.ts",
    "server/whatsapp",
    "**/whatsapp.ts"
  ]
}

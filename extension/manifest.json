{
    "manifest_version": 3,
    "name": "Hunfly Sales Copilot",
    "version": "0.1.0",
    "description": "Seu assistente de vendas em tempo real.",
    "permissions": [
        "tabCapture",
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://meet.google.com/*",
        "https://teams.microsoft.com/*"
    ],
    "background": {
        "service_worker": "src/background/index.ts",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "https://meet.google.com/*",
                "https://teams.microsoft.com/*"
            ],
            "js": [
                "src/content/index.tsx"
            ],
            "run_at": "document_end"
        }
    ],
    "action": {
        "default_popup": "index.html"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "assets/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}